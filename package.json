{
  "name": "use-simple-ts-web",
  "private": true,
  "version": "0.0.2",
  "scripts": {
    "build": "turbo build --filter=!use-simple-ts-web",
    "lint": "eslint src --ext ts,tsx,js,jsx,mjs,cjs",
    "test": "vitest --config ./vitest.config.js",
    "clean:node-modules": "rimraf ./apps/**/node_modules && rimraf ./packages/**/**/node_modules && rm -rf ./node_modules",
    "create:hook": "plop hook",
    "version": "changeset version",
    "release": "changeset publish",
    "version:dev": "changeset version --snapshot dev-v2",
    "release:dev": "changeset publish --snapshot --no-git-tag --tag dev-v2",
    "prepare": "husky install"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@happy-dom/jest-environment": "^10.10.4",
    "@testing-library/react": "14.0.0",
    "@testing-library/user-event": "14.4.3",
    "@types/react": "18.0.37",
    "@types/react-dom": "18.0.11",
    "@typescript-eslint/eslint-plugin": "5.59.0",
    "@typescript-eslint/parser": "5.59.0",
    "@vitejs/plugin-react-swc": "3.0.0",
    "clean-package": "2.2.0",
    "dotenv": "^16.3.1",
    "eslint": "8.38.0",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-react": "^7.25.3",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-react-refresh": "0.3.4",
    "happy-dom": "9.20.3",
    "husky": "^8.0.3",
    "lint-staged": "^13.3.0",
    "plop": "^3.1.2",
    "rimraf": "^5.0.1",
    "standard-version": "^9.5.0",
    "tsup": "^7.2.0",
    "turbo": "^1.10.12",
    "typescript": "5.0.2",
    "vitest": "^0.34.1"
  },
  "pnpm": {
    "overrides": {
      "semver@>=6.0.0 <6.3.1": ">=6.3.1"
    }
  }
}
